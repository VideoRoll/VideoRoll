{
    "compilerOptions": {
        "declaration": true,
        "allowJs": true,
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "sourceMap": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "rootDir": "./src",
        "baseUrl": "./", // types文件夹的相对路径
        "paths": {
            "*": [
                "types/*"
            ],
            "src/*": ["./src/*"]
        },
        "lib": [
            "es2021",
            "dom"
        ],
        "typeRoots": ["./node_modules/@types"],
        "types": [
            "chrome",
            "jest",
            "node",
            "webextension-polyfill",
            "lodash-es"
        ]
    },
    "isolatedModules": true,
    "exclude": [
        "node_modules",
        "src/**/*.html",
        "src/popup/content/main.ts",
        "src/options/index.ts",
        "src/inject/jungle.js"
    ],
    "include": [
        "src/inject/VideoRoll.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/**/*.vue",
        "src/popup/content"
    ]
}